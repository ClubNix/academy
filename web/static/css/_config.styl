// Only variables and functions here: This file is to be imported
dominant-bg-color = #3f51b5
dominant-fg-color = white

highlight-bg-color =  #303f9f
highlight-fg-color =  white

subsidiary-bg-color = #7986cb
subsidiary-fg-color = white

accent-bg-color = #ffab40
accent-fg-color = black

error-color = #ff1744
warning-color = accent-bg-color
info-color = #536dfe

transition-timing = 0.28s
transition-function = cubic-bezier(0.4, 0, 0.2, 1)

title-font()
	font-family: "Fira Sans ExtraLight", sans-serif

body-font()
	font-family: "Linux Libertine", serif

dominant()
	background-color: dominant-bg-color
	color: dominant-fg-color

highlight()
	background-color: highlight-bg-color
	color: highlight-fg-color

subsidiary()
	background-color: subsidiary-bg-color
	color: subsidiary-fg-color

accent()
	background-color: accent-bg-color
	color: accent-fg-color

// See: https://material.google.com/what-is-material/elevation-shadows.html

// Used for transitions
shadow-elevation-0dp()
	box-shadow: 0 0 0 0 transparent

shadow-elevation-2dp()
	box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14),
	            0 1px 5px 0 rgba(0, 0, 0, 0.12),
	            0 3px 1px -2px rgba(0, 0, 0, 0.2)

shadow-elevation-3dp()
	box-shadow: 0 3px 4px 0 rgba(0, 0, 0, 0.14),
	            0 1px 8px 0 rgba(0, 0, 0, 0.12),
	            0 3px 3px -2px rgba(0, 0, 0, 0.4)

shadow-elevation-4dp()
	box-shadow: 0 4px 5px 0 rgba(0, 0, 0, 0.14),
	            0 1px 10px 0 rgba(0, 0, 0, 0.12),
	            0 2px 4px -1px rgba(0, 0, 0, 0.4)

shadow-elevation-6dp()
	box-shadow: 0 6px 10px 0 rgba(0, 0, 0, 0.14),
	            0 1px 18px 0 rgba(0, 0, 0, 0.12),
	            0 3px 5px -1px rgba(0, 0, 0, 0.4)

shadow-elevation-8dp()
	box-shadow: 0 8px 10px 1px rgba(0, 0, 0, 0.14),
	            0 3px 14px 2px rgba(0, 0, 0, 0.12),
	            0 5px 5px -3px rgba(0, 0, 0, 0.4)

shadow-elevation-16dp()
	box-shadow: 0 16px 24px 2px rgba(0, 0, 0, 0.14),
	            0  6px 30px 5px rgba(0, 0, 0, 0.12),
	            0  8px 10px -5px rgba(0, 0, 0, 0.4)

shadow-transitions()
	transition: box-shadow 0.28s cubic-bezier(0.4, 0, 0.2, 1)

round-corners()
	border-radius: 3px
