// Browser vendor prefixes library
@import 'nib'

@import '_config'

section.member-card
	position: relative
	box-sizing: padding-box
	max-width: 43em
	min-width: 28em

section.member-card header
	display: flex
	align-items: center
	margin-bottom: 1em

section.member-card header > img.profile-picture
	margin-right: 1em
	height: 4rem
	border-radius: 2em

section.member-card header > h1
	flex: 1
	font-size: 2em
	border-bottom: 1px solid rgba(0, 0, 0, 0.26)
	padding-bottom: .3em

section.member-card header > .availability,
section.member-card header > .edit-buttons
	position: absolute
	top: 0

section.member-card header > .availability,
section.member-card header > .edit-buttons > *
	padding: .5em
	width: 1.5em
	height: 1.5em

section.member-card header > .availability
	right: 0

section.member-card header > .edit-buttons
	right: 2.5em

section.member-card header > .edit-buttons > *
	display: inline-block
	position: relative

section.member-card .skills
	padding-top: 1em
	margin-left: 4em
	flex: 1
	flex-wrap: wrap
	justify-content: center
	display: flex

section.member-card .skills.dimmed
	color: rgba(0, 0, 0, 0.3)

section.member-card .skills table
	display: flex
	flex: 1
	margin-bottom: 1em
	min-width: 12.75em

section.member-card .skills table > tbody
	margin: 0 auto

section.member-card .skills table > tbody > tr
	width: 100%
	transition: color transition-timing transition-function

section.member-card .skills table > tbody > tr.highlight
	color: highlight-bg-color

section.member-card .skills table > tbody > tr > td.rating
	transition: color transition-timing transition-function
	font-family: sans
	color: accent-bg-color
	padding-left: 1em

section.member-card .skills.dimmed table > tbody > tr > td.rating
	color: rgba(255, 171, 64, 0.3)

section.member-card .skills.dimmed table > tbody > tr.highlight > td.rating
	color: accent-bg-color

section.member-card .skills table > tbody > tr > td.skill-name
	position: relative

section.member-card .skills > .addendum
	min-width: 100%
	transition: max-height transition-timing transition-function

section.member-card .skills > .addendum:empty
	margin: 0

// ================
// == Grid cards ==
// ================

.member-card-grid
	display: flex
	flex-wrap: wrap
	justify-content: center

.member-card-grid > section.member-card
	box-shadow: none
	display: flex
	flex: 1
	margin: 3em 1em
	padding: 0

section.member-card > a
	shadow-elevation-2dp()
	round-corners()
	position: relative
	display: block
	flex: 1
	padding: 1.5em
	box-sizing: border-box

section.member-card > a:hover
	shadow-elevation-8dp()

// ================
// == Full cards ==
// ================

section.member-card.full
	flex-wrap: wrap
	margin: 3em auto
	max-width: 50em
	justify-content: center

section.member-card.full .category
	min-width: 15em
	margin: 0 1em 1em 1em

section.member-card.full .category h2
	margin: 1em 0

section.member-card.full .category table > tbody
	margin: 0 0 0 2em
