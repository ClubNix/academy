<section class="login">
  <h1>Login</h1>

  <%= form_for @conn, session_path(@conn, :create), [as: :session], fn f -> %>
    <div class="input">
      <%= text_input f, :username %>
      <%= label f, :username %>
    </div>
    <div class="input">
      <%= password_input f, :password %>
      <%= label f, :password %>
    </div>

    <%= submit "Login" %>
  <% end %>
</section>
