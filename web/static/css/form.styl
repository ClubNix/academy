// Browser vendor prefixes library
@import 'nib'

@import '_config'

section.login
	max-width: 30em

section.form
	max-width: 40em

section.form h2
	font-size: 1.5em

form
	margin: 0 auto

.login form
	max-width: 15em

section.form form
	max-width: 20em

form .input
	title-font()
	position: relative
	margin: 1.5em auto
	font-size: 1.1em

form .input label.text-input
	color: #AAA
	position: absolute
	pointer-events: none
	left: .7em
	top: 0
	transition: .3s transform
	transform: none

form .input input:focus + label,
form .input input.filled + label
	transform: translate3d(-1em, -1.1em, 0) scale3d(0.7, 0.7, 1)

form input[type="text"],
form input[type="tel"],
form input[type="email"],
form input[type="url"],
form input[type="password"],
form input[type="number"],
form input[type="search"]
	title-font()
	background-color: transparent
	font-size: 1em
	border: none
	border-bottom: 3px solid accent-bg-color
	padding: 0 .5em .2em .5em
	box-sizing: border-box
	width: 100%
	outline: none
	margin-bottom: 1em

form input[type="submit"]
	accent()
	title-font()
	shadow-elevation-2dp()
	round-corners()

	display: block
	padding: .5em 1.5em
	margin: 0 auto
	font-size: 1em
	border: none
	outline: none

form input[type="submit"]::-moz-focus-inner
	border: none

form input[type="submit"]:focus
	shadow-elevation-8dp()

form textarea
	display: block
	margin-top: 1em
	box-sizing: border-box
	width: 100%
	height: 10em

form .input > .help-block
	display: block
	color: error-color
	font-size: .8em
	margin: .6em 0
	box-sizing: border-box
	width: 100%

form > table
	margin: 2em 0

form > table tr.input
	margin: .7em auto

form > table td.name
	padding-right: 2.5em
