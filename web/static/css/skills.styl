// Browser vendor prefixes library
@import 'nib'

@import '_config'

.skills-dashboard
	display: flex
	flex-wrap: wrap
	justify-content: center

.skills-dashboard > h1
	flex: 1

.skills-edit > .buttons
	width: 100%
	text-align: center

.skills-edit > .buttons > *
	display: inline-block

.skill-category
	max-width: 45em
	min-width: 25em
	margin: 2em

.skill-category > header
	position: relative

.skill-category > header > .edit-buttons
	position: absolute
	top: .5em
	right: 0

.skill-category > header > .edit-buttons > *
	display: inline-block
	padding: .5em

.skill-category > .skills
	shadow-elevation-2dp()
	round-corners()
	margin: 0 auto

.skill-category > .skills tr
	transition: background-color .25s transition-function

.skill-category > .skills tr:nth-child(2n)
	background-color: #e8eaf6

.skill-category > .skills tr:hover
	background-color: #c5cae9

.skill-category > .skills td
	padding: .7em 1em
	border-bottom: 1px solid rgba(0, 0, 0, 0.26)

.skill-category > .skills .edit-button,
.skill-category > .skills .delete-button
	padding: .7em

.edit-button .tooltip,
.delete-button .tooltip
	position: relative
