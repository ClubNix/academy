// Browser vendor prefixes library
@import 'nib'

@import '_config'

.http-error
	display: flex
	align-items: center

.http-error .error-text
	margin-top: 3em
	display: flex
	flex-direction: column
	text-align: center

.http-error .error-text h1
	font-size: 6vw
	font-weight: bold
	margin-bottom: 0.5em

.http-error .error-text p
	font-size: 1.5em

.http-error .error-text p a
	text-decoration: underline

.http-error img
	width: 50%
	padding: .7em
	margin: 3em 0 3em 3.5em
